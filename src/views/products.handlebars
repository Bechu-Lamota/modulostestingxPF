<h2>Lista de Productos</h2>

<form id="productForm">
  <label for="name">Nombre: <input id="nameInput" type="text" name="title"></label><br><br>
  <label for="name">CÃ³digo: <input id="codeInput" type="text" name="code"></label><br><br>
  <label for="name">Stock: <input id="stockInput" type="text" name="stock"></label><br><br>
  <label for="price">Precio: <input id="priceInput" type="text" name="price"></label><br><br>
  <input id="sendButton" type="submit" value="Enviar">
</form>

<table id="products">
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Borrar</th>
    </tr>
    {{#each products}}
    <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td><button class="deleteButton" id="deleteButton_{{this._id}}" onclick="deleteProduct('{{this.id}}')"> Borrar </button></td>
    </tr>
    {{/each}}

</table>
   
